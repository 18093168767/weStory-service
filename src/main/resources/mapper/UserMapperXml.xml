<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.springboot.docker.mapper.UserMapper">

    <select id="queryUsers" resultType="User"  parameterType="com.springboot.docker.bean.User">
        SELECT * FROM user
    </select>
    <select id="findUserById" resultType="User"  parameterType="com.springboot.docker.bean.User">
        SELECT * FROM user WHERE id=#{id}
    </select>
    <select id="addUser" resultType="User"  parameterType="com.springboot.docker.bean.User">
       insert into user(name, password) values(#{name},#{password})
    </select>
    <select id="login" resultType="User"  parameterType="com.springboot.docker.bean.User">
        SELECT * FROM user WHERE name=#{name} and password=#{password}
    </select>

</mapper>